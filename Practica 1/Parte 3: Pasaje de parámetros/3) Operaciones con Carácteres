
org 1000h
msj db "Hola, Buenas Tardes"
z db 91

org 3000h
es_mayus: 
          mov al, [bx]
          cmp al, 'A'   ; H=72 - A=65 = si es negativo , no es mayus
          js no_es
          cmp z, al  ; H=72 - Z=90 = si es negativo, no es mayus
          js no_es  
          mov ah, 0ffh
          jmp fin
        no_es: mov ah, 0
  fin:ret 

org 3200h 
a_minus:cmp ah, 0ffh
jnz fin_a_minus
  add byte ptr[bx],20h
fin_a_minus: ret

org 3100h
loop:
     call es_mayus  
     call a_minus
     inc bx
     dec cx
     jnz loop
ret
            
org 2000h
mov bx, offset msj ; tomo el primer caracter
mov cx, offset z- offset msj ; AL longitud del string
mov al,[bx] ; AL contiene el primer caracter
call loop 

int 0
end
; ADD BYTE PTR [BX], 20H (convierto a minuscula)
